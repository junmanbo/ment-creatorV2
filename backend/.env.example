# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/insurance_ars
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/insurance_ars

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development
DEBUG=true

# API
API_V1_STR=/api/v1
PROJECT_NAME=Insurance ARS Manager

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50MB

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379/0

# TTS Service
TTS_MODEL_PATH=./models
TTS_OUTPUT_PATH=./audio_files
